
# wm independent hotkeys
#

# terminal emulator
alt + Return
	termite

# program launcher
alt + d
	rofi -show drun -color-window '#000000, #000000,#000000' -color-normal '#000000, #aaaaaa, #000000, #145f9d, #aaaaaa' -color-active '#000000, #aaaaaa, #000000, #145f9d, #eeeeee' -color-urgent '#000000, #aaaaaa, #000000, #145f9d, #aaaaaa' -hide-scrollbar -location 2

# Screenshot
# alt + p
#	  shutter -s


# i3lock
alt + y
	  i3lock -c 000000 -f 

# close and kill
alt + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
alt + f 
	bspc desktop -l next

#
# state/flags
#

# set the window state
alt + {t,shift + t,s,m}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}


# focus/swap
#

#
alt + r
	  bspc node -n 'last.!automatic.local'


# focus the node in the given direction
alt + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the last node/desktop
alt + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
alt + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
alt + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
alt + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
alt + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# resize too east 
alt + shift + h
	bspc node -z right -20 0 || bspc node -z left -20 0  

# resize too west
alt + shift + l
	bspc node -z right 20 0 || bspc node -z left 20 0 

# resize too nord
alt + shift + k
	bspc node -z top 0 -20 || bspc node -z bottom 0 -20  

# resize too south
alt + shift + j
	bspc node -z top 0 20 || bspc node -z bottom 0 20 

# move a floating window
alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}


#
# Hotkeys
# 


# Brightness
XF86MonBrightness{Down,Up}
	light {-U 5,-A 5}

# Volume
XF86Audio{LowerVolume,RaiseVolume}
	pulse-cli-syntax set-sink-volume 1 {-2%,+2%}

# Mute
XF86AudioMute
	pulse-cli-syntax set-sink-mute 0 toggle

XF86AudioMicMute
	pulse-cli-syntax set-source-mute 1 toggle

# show bar on key press
alt + p
	polybar-msg cmd toggle && xdo raise -N Polybar

# negative -w arg to account for a border width (default: 100%)
# alt + o
#     tdrop -ma -y "$PANEL_HEIGHT" -s dropdown termite

super + w
	id=$(bspc query -N -n "focused");\
	if [ -n "$id" ];then \
		xprop -id $id -f _SCRATCH 32ii -set _SCRATCH $(date +%s,%N);\
		bspc node -t "floating";\
		xdotool windowunmap $id;\
	fi

super + shift + w
	i=$(bspc query -N -n "focused.floating");\
	if [ -n "$i" ];then \
		xprop -id $i -f _SCRATCH 32ii -set _SCRATCH $(date +%s,%N);\
		xdotool windowunmap $i;\
	else;\
		i=$(for w in $(xwininfo -root -children | grep -e "^\s*0x[0-9a-f]\+" -o);do \
			t=$(xprop -id $w _SCRATCH | grep ' = \(.*\)');\
			if [ -n "$t" ];then \
				echo $t $w;\
			fi;\
		done|sort -n|head -n1|cut -d" " -f 5);\
		if [ -n "$i" ];then \
			xprop -id $i -remove _SCRATCH;\
			bspc rule -a \* state=floating center=on --one-shot;\
			xdotool windowmap $i;\
			bspc node -f $i;\
		fi;\
	fi

F12
	xdotool search --onlyvisible --classname scratchpad windowunmap \
	|| ( xdotool search --classname scratchpad windowmap; xdotool search --classname scratchpad windowraise; ) \
	|| ( termite --name scratchpad --class floating; xdotool search --classname scratchpad windowraise; )

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
